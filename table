create table Person(
    id int generated by default as identity primary key,
    username varchar(100),
    age int check ( age > -1 ),
    email varchar(100),
    password varchar(100)
);

create table Task(
    id int generated by default as identity primary key,
    customers int references Person(id),
    title varchar(30),
    description varchar(100),
    completed boolean,
    created_at timestamp,
    updated_at timestamp
);
